{{!-- create.handlebars --}}

{{!-- Seção de conteúdo da página --}}
<div class="container mt-4 w-80">
    <h1 class="mb-4">Criar Notícia</h1>
    <form id="createNoticiaForm" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="createTitulo">Título</label>
            <input type="text" class="form-control" id="createTitulo" name="titulo" value="{{noticia.titulo}}" required>
        </div>
        <div class="form-group mb-3">
            <label for="createResumo">Resumo</label>
            <input type="text" class="form-control" id="createResumo" name="resumo" value="{{noticia.resumo}}" required>
        </div>
        <div class="form-group mb-3">
            <label for="createConteudo">Conteúdo</label>
            <textarea class="form-control" id="createConteudo" name="conteudo" rows="10" required>{{noticia.conteudo}}</textarea>
        </div>
        <div class="form-group mb-3">
            <label for="createImagemPrincipal">Imagem Principal</label>
            <input type="file" class="form-control-file" id="createImagemPrincipal" name="imagem_principal" required>
        </div>
        <div class="form-group mb-3">
            <label for="createImagensInternas">Imagens Internas</label>
            <input type="file" class="form-control-file" id="createImagensInternas" name="imagens_internas" multiple>
        </div>
        <!-- Campo oculto para armazenar o ID do noticia -->
        <input type="hidden" id="createNoticiaId" name="id" value="{{noticia.id}}">
        <a  href="../noticias/" class="btn btn-secondary" id="cancelCreateNoticia"><i class="bi bi-x-circle"></i> Cancelar</a>
        <button  type="button" class="btn btn-primary" id="saveCreateNoticia" onclick="CreateNoticiaClick(event)"><i class="bi bi-check-circle"></i> Salvar</button>
    </form>
</div>
<!-- Scripts do formulário noticia -->
<script src="../js/noticiaScripts.js"></script> 
